{
  "extends": "@sourcegraph/tsconfig",
  "references": [{ "path": "shared" }, { "path": "web" }, { "path": "browser" }, { "path": "extrunner" }],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
  },

  "include": ["**/gulpfile.ts", "**/webpack.config.ts"],
  "exclude": ["node_modules", "lsif"],
}
